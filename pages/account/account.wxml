<view id="fixed">
  <view id="header" style="background-image: url({{imgUrl}})">
    <view id="head">
      <view id="motto_container">
        <text id="motto">{{motto}}</text>
        <text id="motto_subtitle">--{{motto_from}}</text>
      </view>
      <image class="icon" bindtap="setting" src="/source/icon/account/settings-white-24dp.svg"></image>
    </view>
    <view id="user">
      <image src="/source/img/account/avatar.png"></image>
      <view>
        <text id="name">{{user.name}}</text>
        <text id="description">{{user.description}}</text>
      </view>
    </view>
  </view>
</view>
