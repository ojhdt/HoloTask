/* 一般情况下的样式 begin */
page{
  background: #f1f1f1;
}

/* .container{
  margin: 0 50rpx;
} */

.icon{
  width: 50rpx;
  height: 50rpx;
  display: block;
  /* margin: 50rpx; */
}

#fixed{
  position: fixed;
  width: 100%;
  height: 820rpx;
}

#header{
  height: 100%;
  padding: 50rpx 50rpx 80rpx 50rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  background-size: cover;
  background-position: center;
  background-repeat: no-repeat;
}

#head{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

#motto_container{
  width: 400rpx;
  display: flex;
  flex-direction: column;
  color: white;
}

#motto{
  font-size: 1.2rem;
  margin: 0 0 30rpx 0;
}

#motto_subtitle{
  color: #ddd;
  font-size: 0.8rem;
}

#user{
  display: flex;
  flex-direction: row;
  align-items: center;
}

#user image{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50rpx 50rpx 50rpx 50rpx;
}

#user > view{
  margin: 0 0 0 20rpx;
  display: flex;
  flex-direction: column;
  color: white;
}

#name{
  font-size: 1.2rem;
}

#description{
  color: #ddd;
  font-size: 0.8rem;
}

#scroller{
  height: 100%;
  position: absolute;
}

#settings{
  position: fixed;
  width: 100rpx;
  height: 100rpx;
  right: 25rpx;
  top: 25rpx;
}

#footer{
  position: relative;
  top: 900rpx;
  width: 100%;
}

#bar{
  height: 70rpx;
  border-radius: 1rem 1rem 0 0;
  background: #f1f1f1;
  /* box-shadow: 0 -5rpx 20rpx #666; */
  display: flex;
  justify-content: center;
  align-items: center;
}

#bar > view{
  width: 80rpx;
  height: 8rpx;
  border-radius: 4rpx;
  background: #999;
}

#content{
  padding: 0 30rpx 50rpx 30rpx;
  background: #f1f1f1;
}

#scroll{
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  height: 270rpx;
}

.scroll_item{
  flex: 0 0 220rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.scroll_card{
  width: 190rpx;
  height: 230rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background: #fff;
  border-radius: 0.8rem;
  box-shadow: 5rpx 5rpx 20rpx #ddd;
  font-size: 0.8rem;
}

.heading{
  font-size: 1.4rem;
}

#setting_container{
  margin: 0 20rpx;
  padding: 30rpx 0 0 0;
}

.setting_box{
  display: flex;
  flex-direction: row;
  align-items: center;
  margin: 50rpx 0 0 0;
}

.text{
  margin: 0 0 0 50rpx;
  width: 300rpx;
  display: flex;
  flex-direction: column;
}

.subtitle{
  color: #666;
  font-size: 0.8rem;
}


/* 一般情况下的样式 end */

@media (prefers-color-scheme: dark) {
  /* DarkMode 下的样式 start */
  page{
    background: #1f2535;
  }

  #bar{
    background: #1d1f25;
  }

  #bar > view{
    background: #ccc;
  }

  #content{
    background: #1d1f25;
  }

  .scroll_card{
    background: #444;
    box-shadow: 0rpx 0rpx 0rpx #000;
    color: white;
  }

  .heading{
    color: white;
  }

  .setting_box{
    color: white;
  }

  .subtitle{
    color: #ccc;
  }

  /* DarkMode 下的样式 end */
}