/**index.wxss**/
/* 正常模式下应用的样式 */
page{
  background: #f1f1f1;
}
/* 欢迎页样式 */
#login{
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

#login image{
  width: 300rpx;
}

#login_bold{
  font-size: 1.5rem;
  margin: 50rpx;
}

#login_text{
  width:500rpx;
  font-size: 0.9rem;
  color: #666;
}

.login_btn{
  font-size: 0.9rem;
  background-color: #bcddb0;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 1.2rem;
  margin: 100rpx;
}

.h_login_btn{
  transform: scale(0.9,0.9);
}
/* 列表页样式 */

/* 暗黑模式下应用的样式 */
@media (prefers-color-scheme: dark) {
  page{
    background: #1f2535;
  }

  .bold{
    color: white;
  }

  #login_text{
    color: #f1f1f1;
  }

  .login_btn{
    background-color:#56a36c;
    color: white;
  }
}