<view class="frist_title">
  <view class="title">历史</view>
  <view class="historynumber">总计：{{historynumber}}</view>
</view>

<view wx:for="{{historylist}}" wx:key="id" wx:for-item="item">
  <view class="total">   
    <navigator url="/pages/details/details" class="main_body" >  
      <view class="k"></view>
      <view class="total2">

        <view class="jiange2"></view>
        <view class="title_time">  <!--这里放标题和到期时间-->       
            <view class="mian_title">{{item.title}}</view>
            <view class="mian_time">截止：{{item.time}}</view>
        </view>  
        <view class="jiange2"></view>
      </view>
               
      <view class="total2"><!--下面是发布者和发布时间-->
        <view class="jiange2"></view>
        <view class="time_teacher_  title_time">         
            <view class="time">发布时间：{{item.testtime}}</view>   <!--这里放历史数据的时间-->
            <view class="teacher">{{item.teacher}}</view>     
        </view>  
        <view class="jiange2"></view>
      </view>

    </navigator>
  </view>
</view>
