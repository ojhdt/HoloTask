/* pages/accountsetting/accountsetting.wxss */
page {
  background: #f1f1f1;
}

.container {
  margin: 0 50rpx;
}

.heading {
  font-size: 1.4rem;
  margin: 50rpx 0 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.component {
  display: flex;
  height: 120rpx;
  justify-content: space-between;
  align-items: center;
}

.text {
  width: 90%;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.switch{
  position: relative;
  width: 15%;
  height: 100%;
  /* background: pink; */
  display: flex;
  align-items: center;
}

.bar{
  position: absolute;
  right: 4rpx;
  height: 26rpx;
  width: 60rpx;
  background: #9e9e9e;
  border-radius: 13rpx;
  transition: background .2s ease-in-out;
}

.dot{
  position: absolute;
  right: 34rpx;
  width: 34rpx;
  height: 34rpx;
  background: #fff;
  border-radius: 17rpx;
  box-shadow: 5rpx 5rpx 20rpx #ddd;
  transition: background .2s ease-in-out, right .2s ease-in-out;
}

.subtitle{
  font-size: .7rem;
  color: #666;
}

@media (prefers-color-scheme: dark) {
  page {
    background: #1f2535;
  }

  .dot{
    box-shadow: 0 0 0 #ddd;
  }

  .subtitle{
    color: #ccc;
  }
}